{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components": ["components/index.ts"],
      "@constants/*": ["constants/*"],
      "@hooks": ["hooks/index.ts"],
      "@navigation/*": ["navigation/*"],
      "@screens": ["screens/index.ts"],
      "@utils/*": ["utils/*"],
      "@themes": ["themes/index.ts"],
      "@types": ["types/index.tsx"],
      "@stores": ["stores/index.ts"]
    }
  }
}
